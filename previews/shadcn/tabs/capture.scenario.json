{
  "waitAfterLoadMs": 1000,
  "networkIdleTimeoutMs": 2500,
  "shots": [
    {
      "name": "tabs-default",
      "screenshot": {
        "file": "tabs-default.png",
        "fullPage": true
      }
    },
    {
      "name": "tabs-interactive",
      "reset": true,
      "actions": [
        {
          "type": "click",
          "target": {
            "selector": "[role='tab']:not([data-state='active'])"
          }
        }
      ],
      "beforeScreenshotWaitMs": 120,
      "mustDifferFrom": "tabs-default",
      "screenshot": {
        "file": "tabs-interactive.png",
        "fullPage": true
      }
    }
  ]
}
